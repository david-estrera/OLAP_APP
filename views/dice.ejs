<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dice</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <nav>
        <div class="navbar-left">
            <h1>GROUP 11 OLAP</h1> 
        </div>
        <div class="navbar-right">
            <ul>
                <li><a href="/appointments">Appointments</a></li>
                <li><a href="/patients">Patients</a></li>
                <li><a href="/clinics">Clinics</a></li>
                <li><a href="/doctors">Doctors</a></li>
                <li><a href="/drilldown">Drill down</a></li>
                <li><a href="/rollup">Roll up</a></li>
                <li><a href="/dice">Dice</a></li>
                <li><a href="/slice">Slice</a></li>
            </ul>
        </div>
    </nav>

    <h1 class="title">DICE</h1>
    <p class="description">Select appointments for a specific patient on a specific date.</p>

    <form id="appointmentForm" action="/patientsAppointment" method="POST">
        <label for="patientsid">Patient ID:</label>
        <input type="text" id="patientsid" name="patientsid">
        <label for="year">Year:</label>
        <input type="text" id="year" name="year">
        <button type="submit">Submit</button>
    </form>

    <!-- Table to display appointment data -->
    <table class="data-table" id="appointmentsTable">
        <thead>
            <tr>
                <th>Appointment ID</th>
                <th>Status</th>
                <th>Queue Time</th>
                <!-- Add more table headers as needed -->
            </tr>
        </thead>
        <tbody id="appointmentData">
            <!-- Appointment data will be populated here -->
        </tbody>
    </table>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const form = document.getElementById('appointmentForm');
            form.addEventListener('submit', async (event) => {
                event.preventDefault();
                
                const patientsid = document.getElementById('patientsid').value;
                const year = document.getElementById('year').value;
                
                try {
                    const response = await fetch('/patientsAppointment', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ patientsid, year })
                    });
                    const data = await response.json();

                    const tableBody = document.getElementById('appointmentData');
                    tableBody.innerHTML = ''; // Clear previous data

                    data.forEach(appointment => {
                        const row = document.createElement('tr');
                        row.innerHTML = `
                            <td>${appointment.a_id}</td>
                            <td>${appointment.a_status}</td>
                            <td>${appointment.a_queuetime}</td>
                            <!-- Add more table data as needed -->
                        `;
                        tableBody.appendChild(row);
                    });
                } catch (error) {
                    console.error('Error fetching and displaying appointments:', error.message);
                }
            });
        });
    </script>
</body>
</html>
