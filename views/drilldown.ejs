    <h1 class="title">DRILL DOWN</h1>
    <p class="description">View appointments for each doctor within a clinic.</p>

    <table class="data-table" id="appointments-table">
        <thead>
            <tr>
                <th>Appointment ID</th>
                <th>Status</th>
                <th>Queue Time</th>
                <!-- Add more table headers as needed -->
            </tr>
        </thead>
        <tbody>
            <!-- Table rows will be populated dynamically -->
        </tbody>
    </table>
    
</body>
<script>
    document.addEventListener('DOMContentLoaded', async () => {
        try {
            // Get the hospitalid from the query string
            const queryString = window.location.search;
            const urlParams = new URLSearchParams(queryString);
            const hospitalid = urlParams.get('hospitalid');

            // Fetch appointments for the specified clinic
            const response = await fetch(`/appointmentsClinic?hospitalid=${hospitalid}`);
            const data = await response.json();
            
            // Populate the table with the fetched data
            const tableBody = document.querySelector('#appointments-table tbody');
            data.forEach(appointment => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${appointment.a_id}</td>
                    <td>${appointment.a_status}</td>
                    <td>${appointment.a_queuetime}</td>
                    <!-- Add more table data as needed -->
                `;
                tableBody.appendChild(row);
            });
        } catch (error) {
            console.error('Error fetching and displaying appointments:', error.message);
        }
    });
</script>
</html>